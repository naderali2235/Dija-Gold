{
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};MultipleActiveResultSets=true;Encrypt=true;TrustServerCertificate=false"
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER:DijaGoldPOS}",
    "Audience": "${JWT_AUDIENCE:DijaGoldPOSUsers}",
    "ExpiryInHours": 8
  },
  "CompanyInfo": {
    "Name": "${COMPANY_NAME:Dija Gold}",
    "Address": "${COMPANY_ADDRESS:123 Gold Street, Cairo, Egypt}",
    "Phone": "${COMPANY_PHONE:+20 2 1234567}",
    "TaxRegistrationNumber": "${TAX_REGISTRATION_NUMBER}",
    "CommercialRegistrationNumber": "${COMMERCIAL_REGISTRATION_NUMBER}"
  },
  "ReceiptSettings": {
    "HeaderLines": [
      "${RECEIPT_HEADER_LINE1:DIJA GOLD}",
      "${RECEIPT_HEADER_LINE2:Premium Gold Retailer}",
      "${RECEIPT_HEADER_LINE3:123 Gold Street, Cairo, Egypt}",
      "${RECEIPT_HEADER_LINE4:Tel: +20 2 1234567}"
    ],
    "FooterLines": [
      "${RECEIPT_FOOTER_LINE1:Thank you for choosing Dija Gold}",
      "${RECEIPT_FOOTER_LINE2:Return Policy: 7 days with receipt}",
      "${RECEIPT_FOOTER_LINE3:Visit us at www.dijagold.com}"
    ],
    "PrinterName": "${RECEIPT_PRINTER_NAME:Default}",
    "PrintCopies": 2
  },
  "LabelPrinter": {
    "Host": "${LABEL_PRINTER_HOST:}",
    "Port": 9100,
    "WindowsPrinterName": "${LABEL_PRINTER_NAME:}",
    "WidthDots": 600,
    "Density": 8
  },
  "Logging": {
    "EraseDailyIfAuditsSufficient": true,
    "RetainedFileCountLimit": 10,
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Warning",
        "System.Net.Http": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentUserName",
      "WithThreadId",
      "WithProcessId",
      "WithCorrelationId",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {SourceContext} {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme.Code"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/dijaGoldPOS-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {MachineName} {EnvironmentUserName} {ThreadId} {ProcessId} {SourceContext} {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://your-production-seq-server:5341",
          "apiKey": "5d9f6c9f1a1b4d9c9f4c0c8f6b8d9f2a",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Properties": {
      "Application": "DijaGold POS API",
      "Environment": "Production"
    }
  },
  "AuditLogging": {
    "Enabled": true,
    "LogSensitiveOperations": true,
    "LogFinancialTransactions": true,
    "LogUserActions": true,
    "LogSystemEvents": true,
    "ExcludePaths": [
      "/api/health",
      "/api/health/database",
      "/api/health/comprehensive",
      "/swagger"
    ]
  },
  "BusinessRules": {
    "AllowNegativeInventory": false,
    "RequireCustomerForHighValueSales": true,
    "HighValueSalesThreshold": 10000.00,
    "AutoCalculateMakingCharges": true,
    "RequireManagerApprovalForReturns": true,
    "MaxReturnDays": 7,
    "DefaultCurrency": "EGP",
    "WeightPrecision": 3,
    "PricePrecision": 2,
    "CapDiscountToMakingCharges": true,
    "PreventPercentageDiscountWhenMakingChargesWaived": true
  },
  "Cors": {
    "AllowedOrigins": "${CORS_ALLOWED_ORIGINS:http://localhost:3000,https://localhost:3000}",
    "ExposedHeaders": ["X-Correlation-Id"]
  },
  "AllowedHosts": "${ALLOWED_HOSTS:*}"
}
